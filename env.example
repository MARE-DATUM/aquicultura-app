# ===========================================
# CONFIGURAÇÃO DE EXEMPLO - AQUICULTURA APP
# ===========================================
# Copie este arquivo para .env e configure as variáveis conforme necessário

# Database Configuration
POSTGRES_USER=aquicultura_user
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=aquicultura_db
DATABASE_URL=postgresql://aquicultura_user:your_secure_password_here@localhost:5432/aquicultura_db

# JWT Configuration (ALTERE EM PRODUÇÃO!)
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Admin User Configuration
ADMIN_EMAIL=admin@aquicultura.ao
ADMIN_PASSWORD=your_admin_password_here

# Environment Configuration
ENV=development
NODE_ENV=development
TZ=Africa/Luanda

# CORS Configuration (separar por vírgula, sem espaços)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:8000

# Rate Limiting Configuration
RATE_LIMIT_LOGIN_ATTEMPTS=5
RATE_LIMIT_LOGIN_WINDOW_MINUTES=5
RATE_LIMIT_LOGIN_BLOCK_MINUTES=15

# Application Configuration
APP_NAME=App de Gestão dos 21 Projectos de Aquicultura
APP_VERSION=1.0.0
DEFAULT_CURRENCY=Kz
DEFAULT_LOCALE=pt-AO

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Development Tools
DEBUG=true
LOG_LEVEL=info

# Frontend Configuration
VITE_API_URL=http://localhost:8000/api
VITE_APP_NAME=App de Gestão dos 21 Projectos de Aquicultura
VITE_APP_VERSION=1.0.0

# Security Configuration
ALLOWED_HOSTS=localhost,127.0.0.1
TRUSTED_ORIGINS=http://localhost:3000,http://localhost:8000

# Database Connection Pool
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=30
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600

# Session Configuration
SESSION_TIMEOUT_MINUTES=60
REMEMBER_ME_DAYS=30

# File Upload Configuration
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_EXTENSIONS=.csv,.xlsx,.pdf,.jpg,.png

# Backup Configuration
BACKUP_RETENTION_DAYS=30
AUTO_BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *

# Email Configuration (configurar para produção)
SMTP_HOST=localhost
SMTP_PORT=587
SMTP_USER=your_smtp_user
SMTP_PASSWORD=your_smtp_password
SMTP_TLS=true
FROM_EMAIL=noreply@aquicultura.ao

# Audit Configuration
AUDIT_RETENTION_DAYS=365
AUDIT_LOG_LEVEL=INFO
ENABLE_AUDIT_EXPORT=true

# Performance Configuration
CACHE_TTL_SECONDS=300
ENABLE_QUERY_CACHE=true
MAX_QUERY_RESULTS=1000
